.card{
    box-sizing: border-box;
    padding: 20rpx;
    display: flex;
    height: 350rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 24rpx 0 rgb(0 0 0 / 10%);
    position: relative;
}
.cart-left{
    height: 320rpx;
    width: 300rpx;
    border-radius: 20rpx;
}
.cart-right{
    box-sizing: border-box;
    height: 340rpx;
    flex:1;
    padding: 20rpx;
}
.cart-right-title{
    font-size: 35rpx;
}
.cart-right-text{
    font-size: 26rpx;
    margin: 20rpx 0;
    color: #ccc;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}
.cart-right-tag{
    position: absolute;
    bottom: 25rpx;
}
.tag-item{
    margin: 0 10rpx;
}