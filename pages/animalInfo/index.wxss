#animalInfo{
    box-sizing: border-box;
    width: 100%;
    height:100%;
}
.swiper{
    width: 100%;
    height: 600rpx;
}
.swiper-item-image{
    height: 100%;
    width: 100%;
}
.header{
    padding: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
}
.title{
    float: left;
    font-size: 38rpx;
}
.share>.van-button{
    background: none;
    border: 0rpx;
    position: relative;
    top: -20rpx;
    float: right;
}
.info-card{    
    box-sizing: border-box;
    width: 96%;
    box-shadow: 0 4rpx 24rpx 0 rgb(0 0 0 / 10%);
    border-radius: 10rpx;
    margin: 0 auto;
    height: 200rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-left: 20rpx;
}
.info-card>view{
    width: 33%;
}